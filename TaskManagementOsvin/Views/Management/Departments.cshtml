
@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<DepartmentDomainModel>
<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="~/Dashboard/Welcome">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="#">Departments</a>
                <i class="fa fa-circle"></i>
            </li>
            @*<li>
                    <span>Page Layouts</span>
                </li>*@
        </ul>
        <div class="page-toolbar">
            <div class="btn-group pull-right">
                <button type="button" class="btn green btn-sm btn-outline dropdown-toggle" data-toggle="dropdown">
                    Actions
                    <i class="fa fa-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>
                        <a href="#">
                            <i class="icon-bell"></i> Action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon-shield"></i> Another action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon-user"></i> Something else here
                        </a>
                    </li>
                    <li class="divider"> </li>
                    <li>
                        <a href="#">
                            <i class="icon-bag"></i> Separated link
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Add / Update User
        @*<small>blank page layout</small>*@
    </h1>
    <!-- END PAGE TITLE-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Department Details</span>
                    </div>
                    <a class="btn btn-sm green table-group-action-submit pull-right" href="#" id="btnAddDepartment">
                        <i class="fa fa-plus"></i> Add Department
                    </a>
                </div>
                <div class="portlet-body">
                    <div class="alert alert-success dvAlert @ViewBag.Class">
                        @*<button type="button" class="close" data-close="alert"></button>*@
                        <a class="close" onclick="$('.alert').hide()">×</a>
                        <span id="lblMessage"> @ViewBag.Message </span>
                    </div>
                    <div class="row" id="dvAddDept" style="display:none">
                        <div class="col-md-12">
                           @using (Html.BeginForm("AddDepartment", "Management", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frmChangePassword", @class = "form-horizontal" }))
                           {
                                <div class="form-body">
                                    @*<div class="text-danger">
                                            <label id="lblmsg"></label>
                                        </div>*@
                                    <div class="form-group">
                                        <input type="hidden" id="hdnDeptId" />
                                        <label class="control-label col-md-4">
                                            Department Name
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <input tye="text" class="form-control" id="txtDepartmentName" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="text-center">
                                            <button type="button" class="btn green" id="btnAdd">Add</button>
                                            <button type="button" class="btn green" id="btnUpdate" style="display:none">Update</button>
                                        </div>
                                    </div>
                                </div>
                           }
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-header-fixed" id="tbl_Dept">
                        <thead>
                            <tr class="">
                                <th class="text-center"> Department </th>
                                <th class="text-center"> Status </th>
                                <th class="text-center"> Edit </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var Dept in @Model)
                                {
                                    <tr id="row_@Dept.DepartmentId">
                                        <td> @Dept.DepartmentName </td>
                                        @if (Dept.IsActive)
                                        {
                                            <td id="StatusActive_@Dept.DepartmentId"><a id="StatusActiveLink_@Dept.DepartmentId" href="#" onclick="ActivateDeactivateDepartment(@Dept.DepartmentId, false)"><img alt='Active' src='~/assets/global/img/Guiimages/Active.png' width='30px' height='30px' /></a></td>
                                        }
                                        else
                                        {
                                            <td id="StatusActive_@Dept.DepartmentId"><a id="StatusActiveLink_@Dept.DepartmentId" href="#" onclick="ActivateDeactivateDepartment(@Dept.DepartmentId, true)"><img alt='In Active Slip' src='~/assets/global/img/Guiimages/InActive.png' width='30px' height='30px' /></a></td>
                                        }
                                        <td class="text-center"><a class="btn red" href="#" onclick="EditDepartment(@Dept.DepartmentId, '@Dept.DepartmentName')"><i class="fa fa-edit"></i></a> </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!--AddUpdate modal -->
<script type="text/javascript">   
    function ActivateDeactivateDepartment(DepartmentId, IsActive) {
        $(".dvAlert").hide();
        $("#lblMessage").html("");
        $.ajax({
            type: "Get",
            contentType: "application/json; charset=utf-8",
            url: "/api/Management/ActivateDeactivateDepartment?DepartmentId=" + DepartmentId + "&IsActive=" + IsActive,          
            success: function (response) {
                if (response.isSuccess == true) {
                    if (IsActive == false) {
                        $("#StatusActiveLink_" + DepartmentId).remove();
                        $("#StatusActive_" + DepartmentId).append('<a id="StatusActiveLink_' + DepartmentId + '" href="#" onclick="ActivateDeactivateDepartment(' + DepartmentId + ', true)"><img alt="In Active" src="/assets/global/img/Guiimages/InActive.png" width="30px" height="30px"/></a>');
                    }
                    else {
                        $("#StatusActiveLink_" + DepartmentId).remove();
                        $("#StatusActive_" + DepartmentId).append('<a id="StatusActiveLink_' + DepartmentId + '" href="#" onclick="ActivateDeactivateDepartment(' + DepartmentId + ', false)"><img alt="Active" src="/assets/global/img/Guiimages/Active.png" width="30px" height="30px"/></a>');
                    }
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
    $("#btnAdd").click(function () {
        $("#lblMessage").html("");
        $(".dvAlert").hide();
        var DepartmentName = $("#txtDepartmentName").val()
        if (DepartmentName == null || DepartmentName == "") {
            $("#lblMessage").html("Please Enter Department Name.");
            $(".dvAlert").show();
            return false;
        }
        var model = {
            DepartmentName: DepartmentName
        }
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: "/api/Management/AddupdateDepartment",
            data: JSON.stringify(model),
            beforeSend: function () {
                $("#lblMessage").html("Please wait...");
                $(".dvAlert").show();
            },
            success: function (response) {
                if (response.isSuccess == true) {
                    $("#lblMessage").html("Department added successully");
                    $(".dvAlert").show();
                    $("#txtDepartmentName").val("");
                    setTimeout(function () {
                        window.location.href = "/Management/Departments";
                    }, 1700);
                }
                else {
                    $("#lblMessage").html(response.response);
                    $(".dvAlert").show();
                }
            },
            error: function (error) {
                $("#lblMessage").html("Something went wrong, please try again");
                $(".dvAlert").show();
                console.log(error);
            }
        });
    });
    function EditDepartment(DepartmentId, DepartmentName) {
        $("#lblMessage").html("");
        $(".dvAlert").hide();
        $("#dvAddDept").show();
        $("#hdnDeptId").val(DepartmentId);
        $("#txtDepartmentName").val(DepartmentName);
        $("#btnAdd").hide();
        $("#btnUpdate").show();
    }
    $("#btnUpdate").click(function () {
        $("#lblMessage").html("");
        $(".dvAlert").hide();
        var DepartmentName = $("#txtDepartmentName").val()
        if (DepartmentName == null || DepartmentName == "") {
            $("#lblMessage").html("Please Enter Department Name.");
            $(".dvAlert").show();
            return false;
        }
        var model = {
            DepartmentId: $("#hdnDeptId").val(),
            DepartmentName: DepartmentName
        }
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: "/api/Management/AddupdateDepartment",
            data: JSON.stringify(model),
            beforeSend: function () {
                $("#lblMessage").html("Please wait...");
                $(".dvAlert").show();
            },
            success: function (response) {
                if (response.isSuccess == true) {
                    $("#lblMessage").html("Department Updated successully");
                    $(".dvAlert").show();
                    $("#txtDepartmentName").val("");
                    $("#btnUpdate").hide();
                    $("#btnAdd").show();
                    setTimeout(function () {
                        window.location.href = "/Management/Departments";
                    }, 1700);
                }
                else {
                    $("#lblMessage").html(response.response);
                    $(".dvAlert").show();
                }
            },
            error: function (error) {
                $("#lblMessage").html("Something went wrong, please try again");
                $(".dvAlert").show();
                console.log(error);
            }
        });
    });
    $("#btnAddDepartment").click(function () {
        $("#dvAddDept").show();
    });
</script>
