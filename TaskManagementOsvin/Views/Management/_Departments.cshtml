@using TaskManagementOsvin.Security;
@using TaskManagementOsvin.Models;
@model List<DepartmentDomainModel>

<table class="table table-striped table-bordered table-hover table-header-fixed" id="sample_2">
    <thead>
        <tr class="">
            <th class="text-center"> Department </th>
            <th class="text-center"> Status </th>
            <th class="text-center"> Edit </th>
            <th class="text-center"> Delete </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var Dept in @Model)
            {
                <tr id="row_@Dept.DepartmentId">
                    <td class="text-center"> @Dept.DepartmentName </td>
                    @if (Dept.IsActive)
                    {
                        <td class="text-center" id="StatusActive_@Dept.DepartmentId"><a title="Active" id="StatusActiveLink_@Dept.DepartmentId" href="#" onclick="ActivateDeactivateDepartment(@Dept.DepartmentId, false)"><img alt='Active' src='~/assets/global/img/Guiimages/Active.png' width='30px' height='30px' /></a></td>
                    }
                    else
                    {
                        <td class="text-center" id="StatusActive_@Dept.DepartmentId"><a title="InActive" id="StatusActiveLink_@Dept.DepartmentId" href="#" onclick="ActivateDeactivateDepartment(@Dept.DepartmentId, true)"><img alt='In Active Slip' src='~/assets/global/img/Guiimages/InActive.png' width='30px' height='30px' /></a></td>
                    }
                    <td class="text-center"><a class="btn green-dark" href="#" onclick="EditDepartment(@Dept.DepartmentId, '@Dept.DepartmentName')"><i class="fa fa-edit"></i></a> </td>
                    <td class="text-center"><a class="btn red" href="#" onclick="DeleteDepartment(@Dept.DepartmentId)"><i class="fa fa-trash"></i></a> </td>
                </tr>
            }
        }
    </tbody>
</table>

