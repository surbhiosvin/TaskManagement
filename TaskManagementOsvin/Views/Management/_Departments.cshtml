@using TaskManagementOsvin.Security;
@using TaskManagementOsvin.Models;
@model List<DepartmentDomainModel>

<table class="table table-striped table-bordered table-hover table-header-fixed" id="sample_2">
    <thead>
        <tr class="">
            <th class="text-center"> Department </th>
            <th class="text-center"> Status </th>
            <th class="text-center"> Edit </th>
            <th class="text-center"> Delete </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var Dept in @Model)
            {
                <tr id="row_@Dept.DepartmentId">
                    <td class="text-center"> @Dept.DepartmentName </td>
                    @if (Dept.IsActive)
                    {
                    <td id="StatusActiveLink_@Dept.DepartmentId" class="text-center vertical-center"><a id="StatusActiveLink_@Dept.DepartmentId" href="javascript:" title="Active" onclick="ActivateDeactivateDepartment(@Dept.DepartmentId, false)"><i class="fa fa-check-circle" style="font-size:20px;color:forestgreen"></i></a></td>
                    }
                    else
                    {
                    <td id="StatusActiveLink_@Dept.DepartmentId" class="text-center vertical-center"><a id="StatusActiveLink_@Dept.DepartmentId" href="javascript:" title="Inactive" onclick="ActivateDeactivateDepartment(@Dept.DepartmentId, true)"><i class="fa fa-times-circle" style="font-size:20px;color:red"></i></a></td>
                    }
                    <td class="text-center"><a class="btn green-dark" href="#" onclick="EditDepartment(@Dept.DepartmentId, '@Dept.DepartmentName')"><i class="fa fa-edit"></i></a> </td>
                    <td class="text-center"><a class="btn red" href="#" onclick="DeleteDepartment(@Dept.DepartmentId)"><i class="fa fa-trash"></i></a> </td>
                </tr>
            }
        }
    </tbody>
</table>

