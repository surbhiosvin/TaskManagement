
@{
    ViewBag.Title = "Designations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TaskManagementOsvin.Security;
@using TaskManagementOsvin.Models;
@model DesignationDomainModel
<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="~/Dashboard/Welcome">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="#">Designations</a>
                <i class="fa fa-circle"></i>
            </li>
            @*<li>
                    <span>Page Layouts</span>
                </li>*@
        </ul>
        <div class="page-toolbar">
            <div class="btn-group pull-right">
                <button type="button" class="btn green btn-sm btn-outline dropdown-toggle" data-toggle="dropdown">
                    Actions
                    <i class="fa fa-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>
                        <a href="#">
                            <i class="icon-bell"></i> Action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon-shield"></i> Another action
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon-user"></i> Something else here
                        </a>
                    </li>
                    <li class="divider"> </li>
                    <li>
                        <a href="#">
                            <i class="icon-bag"></i> Separated link
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Add / Update Designations
        @*<small>blank page layout</small>*@
    </h1>
    <!-- END PAGE TITLE-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-green">
                        <i class="icon-layers font-green"></i>
                        <span class="caption-subject font-green bold uppercase">Designation Details</span>
                    </div>
                    <a class="btn btn-sm green table-group-action-submit pull-right" href="#" id="btnAddDesignation">
                        <i class="fa fa-plus"></i> Add Designation
                    </a>
                </div>
                <div class="portlet-body">
                    <div class="alert alert-success dvAlert @ViewBag.Class">
                        @*<button type="button" class="close" data-close="alert"></button>*@
                        <a class="close" onclick="$('.alert').hide()">×</a>
                        <span id="lblMessage"> @ViewBag.Message </span>
                    </div>
                    <div class="row" id="dvAddDesignation" style="display:none">
                        <div class="col-md-12">
                            @using (Html.BeginForm("AddDesignation", "Management", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frmAddDesignation", @class = "form-horizontal" }))
                            {
                                <div class="form-body">
                                    @*<div class="text-danger">
                                            <label id="lblmsg"></label>
                                        </div>*@
                                    <input type="hidden" id="hdnDesignationId" />
                                    <input type="hidden" id="hdnDeptId" />
                                    <input type="hidden" id="hdnRole" value="@UserManager.user.roleType" />
                                    @if (UserManager.user.roleType == roleTypeModel.Admin || UserManager.user.roleType == roleTypeModel.HR)
                                    {
                                        <div class="form-group">
                                            <label class="control-label col-md-4">
                                                Department
                                                <span class="required"> * </span>
                                            </label>
                                            <div class="col-md-4">
                                                <select class="form-control" id="ddlDepartment">
                                                    <option value="0">Please select</option>
                                                    @foreach (var Department in Model.listDepartments)
                                                    {
                                                        <option value="@Department.DepartmentId">@Department.DepartmentName</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group">
                                        <input type="hidden" id="hdnDeptId" />
                                        <label class="control-label col-md-4">
                                            Designation
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <input tye="text" class="form-control" id="txtDesignation" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="text-center">
                                            <button type="button" class="btn green" id="btnAdd">Add</button>
                                            <button type="button" class="btn green" id="btnUpdate" style="display:none">Update</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-header-fixed" id="tbl_Dept">
                        <thead>
                            <tr class="">
                                <th class="text-center"> Designation </th>
                                <th class="text-center"> Department </th>
                                <th class="text-center"> Status </th>
                                <th class="text-center"> Edit </th>
                                <th class="text-center"> Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var Designation in Model.listDesignations)
                                {
                                    <tr id="row_@Designation.DesignationId">
                                        <td class="text-center"> @Designation.DesignationName </td>
                                        <td class="text-center"> @Designation.DepartmentName </td>
                                        @if (Designation.IsActive)
                                        {
                                            <td class="text-center" id="StatusActive_@Designation.DesignationId"><a title="Active" id="StatusActiveLink_@Designation.DesignationId" href="#" onclick="ActivateDeactivateDesignation(@Designation.DesignationId, false)"><img alt='Active' src='~/assets/global/img/Guiimages/Active.png' width='30px' height='30px' /></a></td>
                                        }
                                        else
                                        {
                                            <td class="text-center" id="StatusActive_@Designation.DesignationId"><a title="InActive" id="StatusActiveLink_@Designation.DesignationId" href="#" onclick="ActivateDeactivateDesignation(@Designation.DesignationId, true)"><img alt='In Active Slip' src='~/assets/global/img/Guiimages/InActive.png' width='30px' height='30px' /></a></td>
                                        }
                                        <td class="text-center"><a title="Edit" class="btn green-dark" href="#" onclick="EditDesignation(@Designation.DesignationId, @Designation.DepartmentId, '@Designation.DesignationName', @Designation.DepartmentId)"><i class="fa fa-edit"></i></a> </td>
                                        <td class="text-center"><a title="Delete" class="btn red" href="#" onclick="DeleteDesignation(@Designation.DesignationId)"><i class="fa fa-trash"></i></a> </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!--AddUpdate modal -->
<script type="text/javascript">
    function DeleteDesignation(param) {
        $(".dvAlert").hide();
        $("#lblMessage").html("");
        var DesignationId = param;
        $.ajax({
            type: "Get",
            contentType: "application/json; charset=utf-8",
            url: "/api/Management/DeleteDesignationById?DesignationId=" + DesignationId,
            beforeSend: function () {
                $("#lblMessage").html("Please wait...");
                $(".dvAlert").show();
            },
            success: function (response) {
                if (response.isSuccess == true) {
                    if (response.response != "You are not allowed to delete this Designation.") {
                        $("#row_" + DesignationId).remove();
                    }
                    $("#lblMessage").html(response.response);
                    $(".dvAlert").show();
                }
                else {
                    $("#lblMessage").html(response.response);
                    $(".dvAlert").show();
                }
            },
            error: function (error) {
                $("#lblMessage").html("Something went wrong, please try again");
                $(".dvAlert").show();
                console.log(error);
            }
        });
    }
    function ActivateDeactivateDesignation(DesignationId, IsActive) {
        $(".dvAlert").hide();
        $("#lblMessage").html("");
        $.ajax({
            type: "Get",
            contentType: "application/json; charset=utf-8",
            url: "/api/Management/ActivateDeactivateDesignation?DesignationId=" + DesignationId + "&IsActive=" + IsActive,
            success: function (response) {
                if (response.isSuccess == true) {
                    if (IsActive == false) {
                        $("#StatusActiveLink_" + DesignationId).remove();
                        $("#StatusActive_" + DesignationId).append('<a id="StatusActiveLink_' + DesignationId + '" href="#" onclick="ActivateDeactivateDesignation(' + DesignationId + ', true)"><img alt="In Active" src="/assets/global/img/Guiimages/InActive.png" width="30px" height="30px"/></a>');
                    }
                    else {
                        $("#StatusActiveLink_" + DesignationId).remove();
                        $("#StatusActive_" + DesignationId).append('<a id="StatusActiveLink_' + DesignationId + '" href="#" onclick="ActivateDeactivateDesignation(' + DesignationId + ', false)"><img alt="Active" src="/assets/global/img/Guiimages/Active.png" width="30px" height="30px"/></a>');
                    }
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
    $("#btnAdd").click(function () {
        $("#lblMessage").html("");
        $(".dvAlert").hide();
        var DepartmentId = $("#ddlDepartment").val();
        var Designation = $("#txtDesignation").val();
        var Role = $("#hdnRole").val();
        if ((DepartmentId == undefined || DepartmentId <= 0) && (Role=="Admin" || Role=="HR")) {
            $("#lblMessage").html("Please select department.");
            $(".dvAlert").show();
            return false;
        }
        else {
            DepartmentId = $("#hdnDeptId").val();
        }
        if (Designation == null || Designation == "") {
            $("#lblMessage").html("Please enter designation name.");
            $(".dvAlert").show();
            return false;
        }
        var model = {
            DepartmentId: DepartmentId,
            DesignationName: Designation
        }
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: "/api/Management/AddupdateDesignation",
            data: JSON.stringify(model),
            beforeSend: function () {
                $("#lblMessage").html("Please wait...");
                $(".dvAlert").show();
            },
            success: function (response) {
                if (response.isSuccess == true) {
                    $("#lblMessage").html("Designation added successfully");
                    $(".dvAlert").show();
                    $("#txtDesignation").val("");
                    $("#ddlDepartment").val(0);
                    setTimeout(function () {
                        window.location.href = "/Management/Designations";
                    }, 1700);
                }
                else {
                    $("#lblMessage").html(response.response);
                    $(".dvAlert").show();
                }
            },
            error: function (error) {
                $("#lblMessage").html("Something went wrong, please try again");
                $(".dvAlert").show();
                console.log(error);
            }
        });
    });
    function EditDesignation(DesignationId, DepartmentId, DesignationName) {
        $("#lblMessage").html("");
        $(".dvAlert").hide();
        $("#dvAddDesignation").show();
        $("#hdnDesignationId").val(DesignationId);
        $("#hdnDeptId").val(DepartmentId);
        $("#ddlDepartment").val(DepartmentId);
        $("#txtDesignation").val(DesignationName);
        $("#btnAdd").hide();
        $("#btnUpdate").show();
    }
    $("#btnUpdate").click(function () {
        $("#lblMessage").html("");
        $(".dvAlert").hide();
        var DepartmentId = $("#ddlDepartment").val();
        var DesignationName = $("#txtDesignation").val()
        var Role = $("#hdnRole").val();
        if ((DepartmentId == undefined || DepartmentId <= 0) && (Role == "Admin" || Role == "HR")) {
            $("#lblMessage").html("Please select department.");
            $(".dvAlert").show();
            return false;
        }
        else {
            DepartmentId = $("#hdnDeptId").val();
        }
        if (DesignationName == null || DesignationName == "") {
            $("#lblMessage").html("Please Enter Designation Name.");
            $(".dvAlert").show();
            return false;
        }
        var model = {
            DesignationId: $("#hdnDesignationId").val(),
            DepartmentId:DepartmentId,
            DesignationName: DesignationName
        }
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: "/api/Management/AddupdateDesignation",
            data: JSON.stringify(model),
            beforeSend: function () {
                $("#lblMessage").html("Please wait...");
                $(".dvAlert").show();
            },
            success: function (response) {
                if (response.isSuccess == true) {
                    $("#lblMessage").html("Designation Updated successully");
                    $(".dvAlert").show();
                    $("#txtDesignation").val("");
                    $("#ddlDepartment").val(0);
                    $("#btnUpdate").hide();
                    $("#btnAdd").show();
                    setTimeout(function () {
                        window.location.href = "/Management/Designations";
                    }, 1700);
                }
                else {
                    $("#lblMessage").html(response.response);
                    $(".dvAlert").show();
                }
            },
            error: function (error) {
                $("#lblMessage").html("Something went wrong, please try again");
                $(".dvAlert").show();
                console.log(error);
            }
        });
    });
    $("#btnAddDesignation").click(function () {
        $("#dvAddDesignation").show();
    });
</script>
