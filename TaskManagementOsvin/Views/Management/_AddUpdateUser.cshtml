@using TaskManagementOsvin.Security;
@using TaskManagementOsvin.Models;
@model List<EmployeeDomainModel>

<div class="alert alert-success dvAlert @ViewBag.Class">
    @*<button type="button" class="close" data-close="alert"></button>*@
    <a class="close" onclick="$('.alert').hide()">×</a>
    <span id="lblMessage"> @ViewBag.Message </span>
</div>
<table class="table table-striped table-bordered table-hover table-header-fixed" id="tbl_User">
    <thead>
        <tr class="">
            <th class="text-center"> First Name </th>
            <th class="text-center"> Last Name </th>
            <th class="text-center"> Department </th>
            <th class="text-center"> Designation </th>
            <th class="text-center"> Email </th>
            <th class="text-center"> Password </th>
            <th class="text-center"> DOB </th>
            @if (UserManager.user.roleType == roleTypeModel.Admin || UserManager.user.roleType == roleTypeModel.HR)
            {
                <th class="text-center"> Status </th>
                <th class="text-center"> Edit </th>
                <th class="text-center"> Delete </th>
                <th class="text-center"> Emp. Details </th>
                <th class="text-center"> Generate Salary Slip </th>
                <th class="text-center"> Archive </th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var Emp in @Model)
            {
                <tr id="row_@Emp.UserId">
                    <td class="text-center"> @Emp.FirstName </td>
                    <td class="text-center"> @Emp.LastName </td>
                    <td class="text-center"> @Emp.DepartmentName </td>
                    <td class="text-center"> @Emp.DesignationName </td>
                    <td class="text-center"> @Emp.Email </td>
                    <td class="text-center"> @Emp.Password </td>
                    <td class="text-center"> @Emp.DateOfBirth</td>
                    @if (UserManager.user.roleType == roleTypeModel.Admin || UserManager.user.roleType == roleTypeModel.HR)
                    {
                        if (Emp.IsActive)
                        {
                            <td id="StatusActive_@Emp.UserId"><a id="StatusActiveLink_@Emp.UserId" href="#" onclick="ActivateDeactivateDepartment(@Emp.UserId, false)"><img alt='Active' src='~/assets/global/img/Guiimages/Active.png' width='30px' height='30px' /></a></td>
                            @*<td class="text-center"><a href="~/Management/ActivateDeactivateUser?UserId=@Emp.UserId"><img alt='Active' src='~/assets/global/img/Guiimages/Active.png' width='30px' height='30px' /></a></td>*@
                        }
                        else
                        {
                            <td id="StatusActive_@Emp.UserId"><a id="StatusActiveLink_@Emp.UserId" href="#" onclick="ActivateDeactivateDepartment(@Emp.UserId, true)"><img alt='In Active Slip' src='~/assets/global/img/Guiimages/InActive.png' width='30px' height='30px' /></a></td>
                            @*<td class="text-center"><a href="~/Management/ActivateDeactivateUser?UserId=@Emp.UserId"><img alt='In Active Slip' src='~/assets/global/img/Guiimages/InActive.png' width='30px' height='30px' /></a></td>*@
                        }
                        <td class="text-center"><a title="Edit" class="btn blue" href="~/Management/AddEmployee?UserId=@Emp.UserId"><i class="fa fa-edit"></i></a> </td>
                        <td class="text-center"><a title="Delete" class="btn red" href="#" onclick="DeleteUser(@Emp.UserId)"><i class="fa fa-trash"></i></a></td>
                        <td class="text-center"><a title="View Employee Details" href="~/Management/EmployeeDetails?UserId=@Emp.UserId"><img alt="View Full Details" src="~/assets/global/img/Guiimages/View_Details.png" width="30px" height="30px" /></a></td>
                        <td class="text-center"><a title="Generate Salary slip" href="~/Management/GenerateSalarySlip?UserId=@Emp.UserId"><img alt="Generate Salary Slip" src="~/assets/global/img/Guiimages/Payslip_icon.png" width="30px" height="30px" /></a> </td>
                        <td class="text-center"><a href="#" onclick="ArchiveEmployee(@Emp.UserId)"><img alt="Archive/NonArchive" src="~/assets/global/img/Guiimages/archive-image.png" width="30px" height="30px" /></a> </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
