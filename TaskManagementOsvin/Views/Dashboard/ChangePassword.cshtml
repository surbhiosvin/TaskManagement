@model DomainModel.EntityModel.ChangePasswordReqModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content">
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN VALIDATION STATES-->
            <div class="portlet light portlet-fit portlet-form bordered" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class=" icon-layers font-green"></i>
                        <span class="caption-subject font-green sbold uppercase">Change Password</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    @using (Html.BeginForm("ChangePassword", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frmChangePassword", @class = "form-horizontal" }))
                    {
                        <div class="form-body">
                            <div class="alert @ViewBag.AlertType @ViewBag.Class">
                                @*<button type="button" class="close" data-close="alert"></button>*@
                                <a class="close" onclick="$('.alert').hide()">×</a>  
                                <span> @Html.ValidationMessage("CustomError") </span>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Old Password
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.OldPassword, new { @type = "password", @class = "form-control" })
                                    <div class="text-danger">
                                        @Html.ValidationMessageFor(m => m.OldPassword)
                                    </div>
                                    @*<input type="password" name="oldPassword" data-required="1" class="form-control" />*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    New Passwrd
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.NewPassword, new { @type = "password", @class = "form-control" })
                                    <div class="text-danger">
                                        @Html.ValidationMessageFor(m => m.NewPassword)
                                    </div>
                                        @*<input name="newPasswprd" type="text" class="form-control" />*@
                                    </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Confirm New Password
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @type = "password", @class = "form-control" })
                                    <div class="text-danger">
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                    </div>
                                        @*<input name="confirmPassword" type="text" class="form-control" />*@
                                    </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">Submit</button>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- END FORM-->
                </div>
            </div>
            <!-- END VALIDATION STATES-->
        </div>
    </div>
</div>
