
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var action = "";
    //var disabled = "";
}
@using TaskManagementOsvin.Security;
@using TaskManagementOsvin.Models;
@model TaskManagementOsvin.Models.GetDSRModel
<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="javascript:">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="javascript:">Dashboard</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Reports
    </h1>
    <!-- END PAGE TITLE-->
    <div class="row">
        <div class="col-md-12">
            <div class="m-heading-1 border-green m-bordered">
                <h3 class="text-center">Summary Of Week Start Date : <span class="label label-info">@DateTime.ParseExact(Model.startdate, "dd/MM/yyyy",null).ToString("dd-MMMM-yyyy")</span>
                   End Date  <span class="label label-info">@DateTime.ParseExact(Model.enddate, "dd/MM/yyyy", null).ToString("dd-MMMM-yyyy")</span>
                </h3>
                @using (Html.BeginForm())
                {
                    <div class="col-md-4" style="padding-left:0">
                        <div class="input-group input-large datepicker input-daterange" data-date-format="dd/mm/yyyy">
                            @Html.TextBoxFor(x=>x.startdate,new { @class="form-control",@name= "from" })
                            <span class="input-group-addon"> to </span>
                            @Html.TextBoxFor(x => x.enddate, new { @class = "form-control", @name = "to" })
                        </div>
                    </div>
                    <div class="col-md-4" style="padding-left:0;padding-top:5px">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                }
               @*<div class="col-md-12" style="padding-left:0">
                   <ul class="pager">
                       <li class="previous">
                           <a href="#" class="btn blue"><i class="fa fa-angle-left"></i>Older</a>
                       </li>
                       @if(DateTime.ParseExact(Model.enddate, "dd/MM/yyyy", null).Date.AddDays(-(int)DateTime.Today.DayOfWeek + (int)DayOfWeek.Friday) == DateTime.Now.AddDays(-(int)DateTime.Today.DayOfWeek + (int)DayOfWeek.Friday))
                       {
                           action = "javascript:";
                           disabled = "disabled";
                       }
                       <li class="next @disabled">
                           <a href="@action" class="btn blue"><i class="fa fa-angle-right"></i>Next</a>
                       </li>
                   </ul>
               </div>*@
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    @if (UserManager.user.roleType == roleTypeModel.Admin || UserManager.user.roleType == roleTypeModel.HR)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    @Html.Action("_projectReport")
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                @Html.Action("_employeeReport")
            </div>
        </div>
    </div>
</div>